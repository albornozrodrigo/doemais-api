    <main>
        <section id="how-to" class="box box-how-to">
            <div class="valign-wrapper">
                <div class="container">
                    <h2 class="box-title text-center">Como consigo doar?</h2>
                    <br/><br/><br/>
                    <div class="row text-center">
                        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                            <br/>
                            <img src="assets/dist/img/icon-1.png" class="img-fluid" />
